<div class="mb-1">
    <marquee>Cửa hàng chúng tôi cam kết bán hàng chính hãng chất lượng với đa dạng mẫu mã mới nhất trên thị trường hiện nay</marquee>
</div>
<br />
<div class="container">
    <div class="row">

        @foreach (var product in Model.Products)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:200px;object-fit;">
                    <div class="card-body">
                        <h6 style="height:45px" class="card-title" style="font-size:15px;margin-top:-10px">@product.Name</h6>
                        <p class="card-text" style="margin-top:-5px"> Sản phẩm còn : @product.StockQuantity</p>
                        <p class="card-text text-success" style="margin-top:-12px"> @product.Price.ToString() đ</p>
                        <div class="d-flex justify-content-between alight-center">
                            <a href="/Account/Login" class="btn btn-outline-info">Chi Tiết</a>
                            <button class="btn btn-light favorite-button">❤️</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<br />
<br />
<br />
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Lấy tất cả các nút với lớp "favorite-button"
        var favoriteButtons = document.querySelectorAll('.favorite-button');
        favoriteButtons.forEach(function (button) {
            button.addEventListener('click', function () {
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: 'Đã thêm vào yêu thích.',
                    confirmButtonText: 'Đóng'
                });
            });
        });
    });
</script>