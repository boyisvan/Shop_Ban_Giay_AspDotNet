            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                text: 'Phản hồi của bạn đã được gửi thành công.',
                confirmButtonText: 'Đóng'
            }).then(function () {
                feedbackForm.reset();
            });
        });
    });
</script>
