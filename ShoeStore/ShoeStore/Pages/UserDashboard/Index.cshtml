@page
@model ShoeStore.Pages.UserDashboard.IndexModel
@{
    ViewData["Title"] = "Danh Sách Sản Phẩm Của Chúng Tôi";
}
<div class="d-flex justify-content-between">
    <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Tìm kiếm sản phẩm" aria-label="Search">
        <button class="btn btn-outline-success" type="submit" style="width:130px">Tìm kiếm</button>
    </form>
    <a href="/Account/Login" class="btn btn-outline-dark">Đăng Xuất</a>
</div>
<br />

<div id="carouselExampleIndicators" class="carousel slide mb-4">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://graphicsfamily.com/wp-content/uploads/edd/2022/02/Free-Sports-Shoes-Sale-Advertising-Template-Design-1536x864.jpg" alt="Giày 1">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://img.freepik.com/premium-vector/new-year-super-shoe-sale-facebook-cover-banner-design_220809-291.jpg?w=1060" alt="Giày 2">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://img.freepik.com/premium-psd/shoes-facebook-cover-web-banner-template_220159-149.jpg?w=1060" alt="Giày 3">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div> 

<br />
<h4>Sản phẩm bán chạy từ Giày Hoàng Yến</h4>
<br />
<div class="container">
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:350px;object-fit">
                    <div class="card-body">
                        <h5 class="card-title" style="height:50px">@product.Name</h5>
                        <i class="card-text">Còn lại : @product.StockQuantity sản phẩm</i>
                        <p class="card-text">Giá khuyến mại : @product.Price.ToString() đ </p>
                        <div class="d-flex justify-content-between alight-center">
                            <a href="/UserDashboard/ProductDetails/@product.ProductId" class="btn btn-outline-success">Thêm vào giỏ hàng</a>
                            <button class="btn btn-light favorite-button">❤️</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div style="border-bottom:1px solid gray" class="mt-3"></div>
<br />
<!-- Footer Phản Hồi -->
<footer class="mt-2 bg-light py-4 mb-4 w-50" style="margin:0 auto">
    <div class="container">
        <h5>Gửi Feedback cho chúng tôi</h5>
        <form id="feedbackForm">
            <div class="mb-3">
                <label for="name" class="form-label">Họ Tên <span style="color:red">*</span></label>
                <input type="text" class="form-control" id="name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email <span style="color:red">*</span></label>
                <input type="email" class="form-control" id="email" required>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Lời Nhắn <span style="color:red">*</span></label>
                <textarea class="form-control" id="message" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-warning">Gửi Phản Hồi</button>
        </form>
    </div>
</footer>

<br />
<br />
<br />
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Lấy tất cả các nút với lớp "favorite-button"
        var favoriteButtons = document.querySelectorAll('.favorite-button');
        favoriteButtons.forEach(function (button) {
            button.addEventListener('click', function () {
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: 'Đã thêm vào yêu thích.',
                    confirmButtonText: 'Đóng'
                });
            });
        });
    });
</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var feedbackForm = document.getElementById('feedbackForm');

        feedbackForm.addEventListener('submit', function (event) {
            event.preventDefault(); 
            var name = document.getElementById('name').value;
            var email = document.getElementById('email').value;
            var message = document.getElementById('message').value;
