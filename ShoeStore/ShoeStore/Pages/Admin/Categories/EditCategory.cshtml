@page "{id:int}"
@model ShoeStore.Pages.Admin.Categories.EditCategoryModel
@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục";
}

<div class="container mb-5">
    <form method="post" class="border p-4 rounded bg-light form">
        <h5 class="text-center mb-4">Chỉnh Sửa Danh Mục</h5>

        <div class="form-group">
            <label asp-for="Category.CategoryName" class="font-weight-bold">Tên danh mục sản phẩm <span class="text-danger">*</span></label>
            <input asp-for="Category.CategoryName" class="form-control" placeholder="Nhập tên danh mục sản phẩm" />
            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Category.CategoryId" />

        <div class="text-center w-100 mt-2">
            <button type="submit" class="btn btn-outline-success w-100">Lưu</button>
        </div>
    </form>
</div>

<!-- CSS Tùy Chỉnh -->
<style>
    .container {
        max-width: 650px;
    }

    .form {
        transform: scale(0.8);
    }

    .form-control {
        font-size: 1rem;
    }

    .btn {
        font-size: 1rem;
        padding: 0.75rem 1.5rem;
    }

    .bg-light {
        background-color: #f8f9fa;
    }

    .border {
        border: 1px solid #ced4da;
    }

    .rounded {
        border-radius: 0.375rem;
    }

    .font-weight-bold {
        font-weight: 600;
    }

    .text-center {
        text-align: center;
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>
