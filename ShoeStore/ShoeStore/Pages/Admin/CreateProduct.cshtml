@page
@model ShoeStore.Pages.Admin.CreateProductModel
@{
    ViewData["Title"] = "Thêm Sản Phẩm Mới";
}

<div class="container mb-5">
  
    <form method="post" class="border p-4 rounded bg-light form">
        <h5 class="text-center mb-4">Thêm Sản Phẩm Mới</h5>
        <div class="form-group">
            <label asp-for="Product.Name" class="font-weight-bold">Tên sản phẩm <span class="text-danger">*</span></label>
            <input asp-for="Product.Name" class="form-control " placeholder="Nhập tên sản phẩm" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Description" class="font-weight-bold">Mô tả <span class="text-danger">*</span></label>
            <textarea asp-for="Product.Description" class="form-control " rows="4" placeholder="Nhập mô tả sản phẩm"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Price" class="font-weight-bold">Giá bán <span class="text-danger">*</span></label>
            <input asp-for="Product.Price" class="form-control" placeholder="Nhập giá bán" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.StockQuantity" class="font-weight-bold">Số hàng tồn kho <span class="text-danger">*</span></label>
            <input asp-for="Product.StockQuantity" class="form-control " placeholder="Nhập số lượng tồn kho" />
            <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.CategoryId" class="font-weight-bold">Danh mục sản phẩm <span class="text-danger">*</span></label>
            <select asp-for="Product.CategoryId" class="form-control " asp-items="Model.Categories">
                <option value="">Chọn danh mục</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.ImageUrl" class="font-weight-bold">Link hình ảnh sản phẩm <span class="text-danger">*</span></label>
            <input asp-for="Product.ImageUrl" class="form-control " placeholder="Nhập link hình ảnh" />
            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
        </div>
        <div class="text-center w-100 mt-2" style="margin:0 auto;">
            <button type="submit" class="btn btn-outline-success w-100">Thêm mới</button>
        </div>
    </form>
</div>


<!-- CSS Tùy Chỉnh -->
<style>
    .container {
        max-width: 650px;
    }
    .form{
        margin-top:-70px;
        transform: scale(0.8);
    }
    .form-control-lg {
        font-size: 1.1rem;
    }

    .btn-lg {
        font-size: 1.25rem;
        padding: 0.75rem 1.5rem;
    }

    .bg-light {
        background-color: #f8f9fa;
    }

    .border {
        border: 1px solid #ced4da;
    }

    .rounded {
        border-radius: 0.375rem;
    }

    .font-weight-bold {
        font-weight: 600;
    }

    .text-center {
        text-align: center;
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>
