@page
@model ShoeStore.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-6">
            <div class="card ">
                <div class="card-header">
                    <h4 class="text-center">Đăng nhập hệ thống</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-4">
                            <label asp-for="Input.Username" class="font-weight-bold">Tên đăng nhập <span style="color:red;">*</span></label>
                            <input asp-for="Input.Username" class="form-control " placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Input.Password" class="font-weight-bold">Mật khẩu <span style="color:red;">*</span></label>
                            <input asp-for="Input.Password" type="password" class="form-control " placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                            <button type="submit" class="btn btn-success btn-lg w-100">Đăng nhập</button>
                            <br />
                            <a href="/Account/Register" class=" w-100 d-block alert text-decoration-none alert-light btn-lg small" style="font-size:15px;margin:0 auto">Chưa có tài khoản? Đăng kí ngay</a>
                        </form>
         
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .container{
        transform:scale(0.9);
    }
</style>
                       